!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %title
      Awesome Notebook App:
      = @page_title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header#header
      %p
        - if current_user
          Welcome,
          = current_user.name
          = link_to 'Log Out', logout_path
        - else
          = link_to 'Log in with Twitter', auth_path('twitter')
    = yield
