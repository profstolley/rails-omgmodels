!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %title
      Awesome Notebook App:
      = @page_title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header#header
      %p
        = link_to 'Log in with Twitter', '/auth/twitter'
    = yield
