= form_for @note, {url: url, html: { multipart: true }} do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body

  .field
    - if @note.image.file?
      %h3 Current Image
      .image
        = image_tag @note.image.url(:thumb)
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
